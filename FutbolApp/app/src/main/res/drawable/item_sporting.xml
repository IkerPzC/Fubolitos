<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- LÃ­neas verticales-->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/sportingPrincipal" />
        </shape>
    </item>

    <item android:left="50dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:left="100dp" android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sportingPrincipal" />
        </shape>
    </item>

    <item android:left="150dp" android:right="150dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:left="200dp" android:right="200dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/sportingPrincipal" />
        </shape>
    </item>

    <!-- Bordes redondeados -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="5dp"
                android:color="@color/sportingTercero" />
        </shape>
    </item>
</layer-list>